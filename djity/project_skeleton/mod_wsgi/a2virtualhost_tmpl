#Thanks lostquery.com

 #Djangos embeded mod_wsgi
 <VirtualHost *:80>
      ServerName djity.net
      ServerAlias www.djity.net
      ServerAdmin admin@djity.net

      # ReWrite URL to WWW
      RewriteEngine On
      RewriteCond %{HTTP_HOST} ^www.djity.net
      RewriteRule (.*) http://djity.net$1 [R=301,L]

      # Log Files
      ErrorLog /var/log/apache2/error-djity.net.log
      CustomLog /var/log/apache2/access-djity.net.log combined

      # prevent django from seting static files
      DocumentRoot /path/to/your/djity/instance/
      Alias /site_static /path/to/your/djity/instance/static/

      # Setup mod_wsgi
      WSGIDaemonProcess djity.net display-name=djity.net  user=www-data processes=2 threads=15
      WSGIScriptAlias / /path/to/your/djity/instance/mod_wsgi/dispatch.wsgi

 </VirtualHost>

